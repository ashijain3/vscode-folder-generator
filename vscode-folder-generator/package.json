{
  "name": "vscode-folder-generator",
  "displayName": "Folder Structure Generator",
  "description": "Quickly create complex folder structures in your VS Code projects.",
  "version": "0.0.1",
  "main": "./extension.js",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [  
    "onCommand:extension.generateFolderStructure"
],
  "contributes": {
    "commands": [
      {
        "command": "extension.generateFolderStructure",
        "title": "Generate Folder Structure"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.23.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
